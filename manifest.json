{
    "manifest_version": 2,
    "name": "Coins PH Ticker",
    "version": "1.3",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_name": "Coins PH Ticker",
        "default_title": "Coins PH Ticker",
        "default_icon": "images/coins-48.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/coins-16.png",
        "48": "images/coins-48.png",
        "128": "images/coins-128.png",
        "256": "images/coins-256.png"
    },
    "permissions" : [
        "notifications",
        "http://*/*"
    ],
    "update_url" : "https://github.com/ralphjesy12/Chromex-Coins-PH/blob/master/updates.xml"
}
